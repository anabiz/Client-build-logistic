{
  "name": "rider-app",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:apk": "eas build --platform android --profile preview",
    "build:dev": "expo run:android",
    "build:local": "npx expo prebuild && cd android && gradlew.bat assembleDebug",
    "build:simple": "npx expo run:android --variant debug"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "expo": "~54.0.0",
    "expo-dev-client": "~6.0.20",
    "expo-image-picker": "~16.0.0",
    "expo-status-bar": "~2.0.0",
    "react": "18.3.1",
    "react-native": "0.76.1",
    "react-native-web": "~0.19.13",
    "expo-av": "~15.0.0",
    "expo-notifications": "~0.29.14"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  },
  "private": true
}
